
public class RPNParserException extends Exception{
	  
	private static final long serialVersionUID = 1L;

	/*public static void main(String args[]) {
	   myException('p'); }*/
	   
	public static int  myException (String parm)  {
		for (int i = 0; i < parm.length(); i++){
		   if (Character.isLetter(parm.charAt(i)) || Character.isSpaceChar(parm.charAt(i)))
			  System.out.println("You've put character " + parm + ", but we can use only numbers or arithmetic signs"); }
		return -1;}
}